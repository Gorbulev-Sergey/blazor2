<div class="card mt-3">
    <div class="card-header bg-info text-white">
        <h3>Книга: @Название</h3>
    </div>
    <div class="card-body">
        <p>Автор: @Автор</p>
    </div>
</div>

@code {
    [Parameter]
    public string Название { get; set; }
    [Parameter]
    public string Автор { get; set; }
}
